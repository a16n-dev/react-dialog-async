{
    "compilerOptions": {
      "skipLibCheck": true,
      "lib": ["DOM", "ES2022"],
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node16",
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "module": "node16",
      "verbatimModuleSyntax": true
    }
  }
